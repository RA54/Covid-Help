<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".After_detail_view">


    <androidx.cardview.widget.CardView
        android:id="@+id/header_onDetails"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#F20288D1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back_after_detail"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/After_detial_title"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:letterSpacing="0.05"
                android:layout_toRightOf="@+id/iv_back_after_detail"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/header_onDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webVeiw_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>